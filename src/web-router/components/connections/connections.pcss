:root {
  --line: #a19ea0;
  --routed: #ffe44d;
}

.connections {
  & .routes {
    padding: 0;

    & .route {
      position: absolute;
      z-index: -1;
      width: 34.25%;

      & .line {
        stroke: color(var(--line) tint(50%));
        stroke-linecap: round;
        stroke-width: 4;
      }

      &.expanded .line {
        stroke: color(var(--routed) b(5%));
      }
    }
  }
}
