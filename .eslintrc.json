{
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "curly": "off",
    "quotes": ["error", "single"],
    "no-multiple-empty-lines": "off",
    "padded-blocks": "off",
    "func-call-spacing": "off",
    "no-global-assign": "off",
    "no-tabs": "off",
    "no-template-curly-in-string": "off",
    "no-unsafe-negation": "off"
  },
  "globals": {
    "WebSocket": true,
    "Image": true,
    "jasmine": true,
    "fail": true
  },
  "env": {
    "jest": true
  }
}
